---
import BadgeAtom from "../atoms/BadgeAtom.astro";
import CoffeAtom from "../atoms/CoffeAtom.astro";
import type { HTMLAttributes } from "astro/types";
type Props = {
  description: { detail: string }[];
  dateFrom: string;
  dateTo: string;
  enterprice: string;
  mode: string;
} & HTMLAttributes<"div">;
const { description, dateFrom, dateTo, enterprice, mode } =
  Astro.props as Props;
---

<div
  id="coffe-exp"
  class="md:px-4 md:py-7 md:gap-4 md:max-w-[24rem] w-full relative shrink-0 flex flex-col rounded-2xl gap-2 outline-1 outline-thirty/40 p-4 overflow-hidden"
>
  <div class="absolute bottom-0 right-0 lg:w-fit lg:h-fit w-25 h-25 coffe_svg">
    <CoffeAtom />
  </div>
  <div class="flex flex-col">
    <h1
      class="md:text-5xl font-[BebasNeueRegular] text-xl tracking-wide text-primary-tailwind"
    >
      {enterprice}
    </h1>
    <p
      class="text-xs font-[OpenSansLight] tracking-wider text-primary-tailwind"
    >
      {dateTo} - {dateFrom}
    </p>
  </div>
  <BadgeAtom
    title={mode}
    style="sm:text-xs w-fit bg-black text-white font-[OpenSansLight] text-[10px] tracking-wider uppercase bg-banner text-primary-tailwind"
  />
  <div class="md:flex w-full flex-col gap-2 hidden">
    {
      description.map((item, _index) => {
        return (
          <span class="font-[OpenSansLight] text-xs text-primary-tailwind">
            - {item.detail}
          </span>
        );
      })
    }
  </div>
</div>
