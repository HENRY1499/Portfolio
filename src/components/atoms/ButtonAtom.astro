---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"button">;
const { type, title, style, ...atrs } = Astro.props as Props;
import { cn } from "src/lib/utils.ts";
---

<button
  {...atrs}
  class={cn("w-full min-h-12 flex items-center px-8 bg-white ", style)}
>
  <span class="text-black font-[MontserratSemiBold] text-sm tracking-widest"
    >{title}</span
  >
</button>
