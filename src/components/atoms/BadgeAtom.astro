---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"span">;
const { style, title } = Astro.props as Props;
---

<span
  class={cn(
    `px-2 py-1 text-xs font-medium text-white bg-blue-500 rounded-full`,
    style,
  )}
>
  {title}
</span>
