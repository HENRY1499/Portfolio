---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"input">;
const { type, name, placeholder } = Astro.props as Props;
---

<input
  required
  placeholder={placeholder}
  name={name}
  type={type}
  class="lg:text-sm sm:px-4 sm:py-3 sm:rounded-[.4em] w-full outline-none focus:outline-2 focus:ring-2 focus:ring-[#C49381] bg-white rounded-[.3em] py-2 px-4 text-xs"
/>
