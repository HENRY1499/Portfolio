---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button">;

const { type, class: className = "", ...atrs } = Astro.props as Props;
---

<button
  type={type}
  {...atrs}
  class={`sm:text-sm button flex items-center justify-center  bg-[#DAA38F] text-xs text-white font-[MontserratSemiBold] rounded-full cursor-pointer opacity-0 invisible ${className}`}
  ><slot /></button
>

