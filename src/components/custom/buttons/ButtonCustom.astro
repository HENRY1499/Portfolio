---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button">;

const { type, class: className = "", ...atrs } = Astro.props as Props;
---

<button
  type={type}
  {...atrs}
  class={`sm:text-sm button flex items-center justify-center  bg-[#DAA38F] text-xs text-white font-[MontserratSemiBold] rounded-full cursor-pointer opacity-0 invisible ${className}`}
  ><slot /></button
>
<script>
  import gsap from "gsap";
  const button = document.querySelectorAll(".button");
  if (button) {
    button.forEach((btn) => {
      btn.addEventListener("mouseenter", () => {
        gsap.killTweensOf(btn, "y");
        gsap.to(btn, {
          y: -10,
          duration: 0.5,
          ease: "power3.inOut",
          yoyo: true,
          repeat: 1,
        });
      });
    });
  }
</script>
