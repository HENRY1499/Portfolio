---
import ReactAtom from "../atoms/ReactAtom.astro";
import BoxProyectMolecule from "../molecules/BoxProyectMolecule.astro";
import Projects from "@/samples/Projects.json";
---

<div
  class="sm:gap-24 sm:flex-row w-full h-full flex flex-col gap-4 justify-between"
>
  <div
    class="md:grid-cols-6 md:grid-rows-2 md:gap-4 w-full h-auto overflow-auto grid gap-2 grid-cols-3 grid-rows-2 justify-center"
  >
    {
      Projects.map((project, index) => (
        <BoxProyectMolecule data-project={index + 1} title={project.title} />
      ))
    }
  </div>
  <section id="details-project-content" class="sm:p-10 relative w-full p-4">
    <div class="w-full h-full flex flex-col gap-4 items-center justify-center">
      <ReactAtom style={"w-15 h-15"} />
      <p class="font-[OpenSansRegular] text-white text-xl uppercase">
        Mostrar Proyeto
      </p>
      <span
        class="font-[OpenSansLight] text-sm w-full text-center text-secondary"
        >Selecciona uno de los proyectos de la izquierda.</span
      >
    </div>
  </section>

