    const projects = document.querySelectorAll("button");
    const details_project = document.querySelector("#details-project-content");

    // Tomo el primero (0+1) del array
    if (details_project && projects.length > 0) {
      const firstElement = projects[1].dataset.project;
      if (firstElement) {
        details_project.innerHTML = data[firstElement];
        projects[1].classList.add("active");
        // projects[2].classList.add("inactive");
        // projects[3].classList.add("inactive");
        // projects[4].classList.add("inactive");
        // projects[5].classList.add("inactive");
      }
    }

    projects.forEach((pro) => {
      pro.addEventListener("click", () => {
        const index = pro.dataset.project;
        if (!index || !details_project) return;

        details_project.innerHTML = data[index];
        projects.forEach((p) => p.classList.remove("active"));
        pro.classList.add("active");
      });
    });
  </script>
</div>
